<%- layout("/layouts/boilerplate") %>

<div class="row mt-3">
<div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
</div>
<div class="card col-6 offset-3 mb-3 show-card listing-card" style="position: relative;">
    <% if(currUser) { %>
        <button class="wishlist-btn" data-listing-id="<%= listing._id %>" 
                onclick="toggleWishlist(event, '<%= listing._id %>')" 
                style="position: absolute; top: 1rem; right: 1rem; z-index: 10; background: white; border: none; border-radius: 50%; width: 45px; height: 45px; cursor: pointer; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">
            <i class="fa-regular fa-heart" style="color: #fe424d; font-size: 1.4rem;"></i>
        </button>
    <% } %>
    <img
    src="<%= listing.image.url%>"
    class="card-img-top show-img"
    alt="listing_image"
    />
    <div class="card-body">
    <% if(listing.owner) { %>
  <p class="card-text"><i>Owned by: <%= listing.owner.username %></i></p>
<% } %>
    <p class="card-text"><%= listing.description %><br /></p>
    <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> per night<br /></p>
    <p class="card-text"><%= listing.location %></p>
    <p class="card-text"><%= listing.country %></p>
    </p>
    </div>

    <!-- Book Now Button for non-owners -->
    <% if(currUser && (!listing.owner || !listing.owner._id.equals(currUser._id))) { %>
    <div class="card-footer bg-transparent border-top-0">
        <a href="/bookings/new/<%= listing._id %>" class="btn btn-success w-100">
            <i class="fa-solid fa-calendar-check"></i> Book Now
        </a>
    </div>
    <% } %>
</div>

<% if(currUser && (!listing.owner || !listing.owner._id.equals(currUser._id))) { %>
<div class="col-6 offset-3 mb-3">
    <a href="/bookings/new/<%= listing._id %>" class="btn btn-primary btn-lg w-100">
        <i class="fas fa-calendar-check me-2"></i>Book Now
    </a>
</div>
<% } %>

<!-- Location Map Section -->
<div class="col-8 offset-3 mb-4">
    <h4 class="mb-3">Where You'll Be</h4>
    <div id="property-map" style="height: 400px; border-radius: 12px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.1);"></div>
    <p class="mt-2 text-muted"><i class="fas fa-map-marker-alt me-2"></i><%= listing.location %>, <%= listing.country %></p>
</div>

<% if(currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
<div class="btns">
    <a href="/listings/<%=listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn" style="width: 76.5px;">Edit</a>
    <form
    method="POST"
    action="/listings/<%=listing._id %>?_method=DELETE"
    class="d-inline"
    >
    <button class="btn btn-dark offset-5">Delete</button>
    </form>
</div>
<% } %>


<div class="col-8 offset-3 mb-3">
    <hr />
    <% if(currUser) {%>
    <h4>Leave a Review</h4>
    <form
    action="/listings/<%=listing._id %>/reviews"
    method="POST"
    novalidate
    class="needs-validation"
    >
    
    <div class="mb-3 mt-3">
        <label for ="rating" class="form-label">Rating</label>
    <fieldset class="starability-slot">
    <legend>First rating:</legend>
    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
    <label for="first-rate1" title="Terrible">1 star</label>
    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
    <label for="first-rate2" title="Not good">2 stars</label>
    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
    <label for="first-rate3" title="Average">3 stars</label>
    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
    <label for="first-rate4" title="Very good">4 stars</label>
    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
    <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
    

    <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
        name="review[comment]"
        id="comment"
        cols="30"
        rows="5"
        class="form-control"
        required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review.</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <% } %>

    <% if(listing.reviews && listing.reviews.length > 0) { %>
    <p><b>All reviews</b></p>
    <div class="row">
    <% for(review of listing.reviews) { %>
    <div class="card col-6 ms-3 mb-3">
        <div class="card-body">
        <h5 class="card-title">@<%= review.author.username%></h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
        <form
            class="mb-3"
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
            <button class="btn btn-sm btn-dark">Delete</button>
        </form>
        </div>
    </div>
    <% } %>
    </div>
    <% } %>
</div>
</div>
</div>

<script>
    // Wishlist toggle function
    async function toggleWishlist(event, listingId) {
        event.preventDefault();
        event.stopPropagation();
        
        const button = event.currentTarget;
        const icon = button.querySelector('i');
        
        try {
            const response = await fetch(`/wishlist/${listingId}/toggle`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                if (data.inWishlist) {
                    icon.classList.remove('fa-regular');
                    icon.classList.add('fa-solid');
                } else {
                    icon.classList.remove('fa-solid');
                    icon.classList.add('fa-regular');
                }
            }
        } catch (error) {
            console.error('Error toggling wishlist:', error);
        }
    }
    
    // Initialize map for this listing
    window.addEventListener('load', function() {
        <% if (listing.geometry && listing.geometry.coordinates && listing.geometry.coordinates.length === 2) { %>
            let listingCoordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
            let listingLocation = "<%= listing.location %>";
            console.log("Initializing map with coordinates:", listingCoordinates);
            
            // Check if Leaflet is loaded
            if (typeof L !== 'undefined') {
                console.log("Leaflet loaded, initializing map");
                initListingMap(listingCoordinates, listingLocation);
            } else {
                console.error("Leaflet library not loaded");
            }
        <% } else { %>
            console.log("No valid geometry data for this listing");
            let mapElement = document.getElementById('property-map');
            if (mapElement) {
                mapElement.innerHTML = '<div style="display: flex; align-items: center; justify-content: center; height: 100%; background: #f0f0f0;"><p style="color: #666;">Map not available for this location</p></div>';
            }
        <% } %>
    });
</script>
