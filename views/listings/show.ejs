<%- layout("/layouts/boilerplate") %>

<div class="row mt-3">
<div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <h3 class="text-center mb-4"><%= pickLocale(listing.title_i18n) || listing.title %></h3>
</div>
<div class="card col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 mb-3 show-card listing-card" style="position: relative;">
    <% if(currUser) { %>
        <button class="wishlist-btn" data-listing-id="<%= listing._id %>" 
                onclick="toggleWishlist(event, '<%= listing._id %>')" 
                style="position: absolute; top: 1rem; right: 1rem; z-index: 10; background: white; border: none; border-radius: 50%; width: 45px; height: 45px; cursor: pointer; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">
            <i class="fa-regular fa-heart" style="color: #fe424d; font-size: 1.4rem;"></i>
        </button>
    <% } %>
    <div class="card-media">
        <img
        src="<%= listing.image.url%>"
        class="card-img-top show-img"
        alt="listing_image"
        />
        <span class="category-chip"><i class="fa-solid fa-tag"></i><%= listing.category || 'Trending' %></span>
    </div>
    <div class="card-body">
        <% if(listing.owner) { %>
    <p class="card-text"><i><%= __('listings.show.ownedBy') %> <%= listing.owner.username %></i></p>
<% } %>
    <p class="card-text"><%= pickLocale(listing.description_i18n) || listing.description %><br /></p>
        <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> <%= __('listings.show.perNight') %><br /></p>
    <p class="card-text"><%= listing.location %></p>
    <p class="card-text"><%= listing.country %></p>
    </p>
    </div>
</div>

<!-- Weather Widget Section -->
<% if(weather) { %>
<div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 mb-3">
    <div class="weather-widget">
        <div class="weather-main">
            <div class="weather-temp-section">
                <img src="<%= weather.iconUrl %>" alt="<%= weather.description %>" class="weather-icon-large">
                <div>
                    <div class="weather-temp">
                        <%= weather.temp %><span class="weather-temp-unit">°C</span>
                    </div>
                    <div class="weather-description"><%= weather.description %></div>
                    <div class="weather-location">
                        <i class="fas fa-map-marker-alt"></i>
                        <%= weather.cityName %>, <%= weather.country %>
                    </div>
                </div>
            </div>
        </div>
        <div class="weather-details">
            <div class="weather-detail-item">
                <div class="weather-detail-label"><%= __('weather.feelsLike') %></div>
                <div class="weather-detail-value">
                    <i class="fas fa-temperature-half"></i>
                    <%= weather.feelsLike %>°C
                </div>
            </div>
            <div class="weather-detail-item">
                <div class="weather-detail-label"><%= __('weather.humidity') %></div>
                <div class="weather-detail-value">
                    <i class="fas fa-droplet"></i>
                    <%= weather.humidity %>%
                </div>
            </div>
            <div class="weather-detail-item">
                <div class="weather-detail-label"><%= __('weather.wind') %></div>
                <div class="weather-detail-value">
                    <i class="fas fa-wind"></i>
                    <%= weather.windSpeed %> m/s
                </div>
            </div>
            <div class="weather-detail-item">
                <div class="weather-detail-label"><%= __('weather.clouds') %></div>
                <div class="weather-detail-value">
                    <i class="fas fa-cloud"></i>
                    <%= weather.clouds %>%
                </div>
            </div>
        </div>
    </div>
</div>
<% } else { %>
<div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 mb-3">
    <div class="weather-not-available">
        <i class="fas fa-cloud"></i>
        <div><%= __('weather.notAvailable') %></div>
    </div>
</div>
<% } %>

<% if(currUser && (!listing.owner || !listing.owner._id.equals(currUser._id))) { %>
<div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 mb-3">
    <a href="/bookings/new/<%= listing._id %>" class="btn btn-primary btn-lg w-100">
        <i class="fas fa-calendar-check me-2"></i><%= __('listings.show.bookNow') %>
    </a>
</div>
<% } %>

<!-- Location Map Section -->
<div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 mb-4">
    <h4 class="mb-3"><%= __('listings.show.where') %></h4>
    <div class="map-wrapper">
    <button class="map-toggle" data-target="#property-map"><i class="fa-solid fa-expand"></i> <%= __('listings.show.map.expand') %></button>
        <div id="property-map" class="map-container"></div>
    </div>
    <p class="mt-2 text-muted"><i class="fas fa-map-marker-alt me-2"></i><%= listing.location %>, <%= listing.country %></p>
    
</div>

<% if(currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
<div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 mb-3">
    <div class="d-flex gap-2 justify-content-center">
    <a href="/listings/<%=listing._id %>/edit" class="btn edit-btn flex-grow-1"><%= __('listings.show.edit') %></a>
        <form
        method="POST"
        action="/listings/<%=listing._id %>?_method=DELETE"
        class="flex-grow-1"
        >
    <button class="btn btn-danger w-100"><%= __('listings.show.delete') %></button>
        </form>
    </div>
</div>
<% } %>


<div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 mb-3">
    <hr />
    <% if(currUser) {%>
    <h4><%= __('listings.show.reviews.leave') %></h4>
    <form
    action="/listings/<%=listing._id %>/reviews"
    method="POST"
    novalidate
    class="needs-validation"
    >
    
    <div class="mb-3 mt-3">
        <label for ="rating" class="form-label"><%= __('listings.show.reviews.rating') %></label>
    <fieldset class="starability-slot">
    <legend><%= __('listings.show.reviews.legend') %></legend>
    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
    <label for="first-rate1" title="<%= __('listings.show.reviews.terrible') %>">1 <%= __('listings.show.reviews.star') %></label>
    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
    <label for="first-rate2" title="<%= __('listings.show.reviews.notGood') %>">2 <%= __('listings.show.reviews.stars') %></label>
    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
    <label for="first-rate3" title="<%= __('listings.show.reviews.average') %>">3 <%= __('listings.show.reviews.stars') %></label>
    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
    <label for="first-rate4" title="<%= __('listings.show.reviews.veryGood') %>">4 <%= __('listings.show.reviews.stars') %></label>
    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
    <label for="first-rate5" title="<%= __('listings.show.reviews.amazing') %>">5 <%= __('listings.show.reviews.stars') %></label>
    </fieldset>
    

    <div class="mb-3 mt-3">
    <label for="comment" class="form-label"><%= __('listings.show.reviews.comments') %></label>
        <textarea
        name="review[comment]"
        id="comment"
        cols="30"
        rows="5"
        class="form-control"
        required
        ></textarea>
        <div class="invalid-feedback"><%= __('listings.show.reviews.invalidComment') %></div>
    </div>
    <button class="btn btn-outline-dark"><%= __('listings.show.reviews.submit') %></button>
    </form>
    <hr />
    <% } %>

    <% if(listing.reviews && listing.reviews.length > 0) { %>
    <p><b><%= __('listings.show.reviews.all') %></b></p>
    <div class="row">
    <% for(review of listing.reviews) { %>
    <div class="card col-12 col-md-5 mb-3 mx-auto">
        <div class="card-body">
        <h5 class="card-title">@<%= review.author.username%></h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
        <form
            class="mb-3"
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
            <button class="btn btn-sm btn-dark"><%= __('listings.show.reviews.delete') %></button>
        </form>
        </div>
    </div>
    <% } %>
    </div>
    <% } %>
</div>
</div>
</div>

<script>
    // Wishlist toggle function
    async function toggleWishlist(event, listingId) {
        event.preventDefault();
        event.stopPropagation();
        
        const button = event.currentTarget;
        const icon = button.querySelector('i');
        
        try {
            const response = await fetch(`/wishlist/${listingId}/toggle`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                if (data.inWishlist) {
                    icon.classList.remove('fa-regular');
                    icon.classList.add('fa-solid');
                } else {
                    icon.classList.remove('fa-solid');
                    icon.classList.add('fa-regular');
                }
            }
        } catch (error) {
            console.error('Error toggling wishlist:', error);
        }
    }
    
    // Initialize map for this listing
    window.addEventListener('load', function() {
        <% if (listing.geometry && listing.geometry.coordinates && listing.geometry.coordinates.length === 2) { %>
            let listingCoordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
            let listingLocation = "<%= listing.location %>";
            console.log("Initializing map with coordinates:", listingCoordinates);
            
            // Check if Leaflet is loaded
            if (typeof L !== 'undefined') {
                console.log("Leaflet loaded, initializing map");
                initListingMap(listingCoordinates, listingLocation);
            } else {
                console.error("Leaflet library not loaded");
            }
        <% } else { %>
            console.log("No valid geometry data for this listing");
            let mapElement = document.getElementById('property-map');
            if (mapElement) {
                const msg = <%- JSON.stringify(__('listings.show.map.unavailable')) %>;
                mapElement.innerHTML = '<div style="display: flex; align-items: center; justify-content: center; height: 100%; background: #f0f0f0;"><p style="color: #666;"></p></div>';
                mapElement.querySelector('p').textContent = msg;
            }
        <% } %>
    });
</script>
