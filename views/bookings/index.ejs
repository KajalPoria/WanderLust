<%- layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-10 offset-1">
        <h3>My Bookings</h3>
        <hr />
        
        <% if(bookings.length === 0) { %>
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle"></i> You don't have any bookings yet. 
                <a href="/listings" class="alert-link">Browse listings</a> to make your first booking!
            </div>
        <% } else { %>
            <div class="row">
                <% for(let booking of bookings) { %>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="<%= booking.listing.image.url %>" class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="<%= booking.listing.title %>">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= booking.listing.title %></h5>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="bi bi-geo-alt"></i> <%= booking.listing.location %>, <%= booking.listing.country %>
                                            </small>
                                        </p>
                                        <p class="card-text">
                                            <i class="bi bi-calendar-check"></i> 
                                            <%= new Date(booking.checkIn).toLocaleDateString('en-IN') %> - 
                                            <%= new Date(booking.checkOut).toLocaleDateString('en-IN') %>
                                        </p>
                                        <p class="card-text">
                                            <i class="bi bi-people"></i> <%= booking.guests %> guest<%= booking.guests > 1 ? 's' : '' %>
                                        </p>
                                        <p class="card-text">
                                            <strong>Total: &#8377; <%= booking.totalPrice.toLocaleString("en-IN") %></strong>
                                        </p>
                                        <p class="card-text">
                                            <span class="badge <%= booking.paymentStatus === 'completed' ? 'bg-success' : booking.paymentStatus === 'pending' ? 'bg-warning' : 'bg-danger' %>">
                                                <%= booking.paymentStatus.toUpperCase() %>
                                            </span>
                                        </p>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <a href="/bookings/<%= booking._id %>" class="btn btn-sm btn-primary">View Details</a>
                                        <% if(booking.paymentStatus === 'pending') { %>
                                            <form method="POST" action="/bookings/<%= booking._id %>?_method=DELETE" class="d-inline">
                                                <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to cancel this booking?')">Cancel</button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>
</div>
